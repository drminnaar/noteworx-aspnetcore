<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NoteWorx</title>
    <environment include="Development">
        <link rel="stylesheet" href="~/node_modules/bootstrap/dist/css/bootstrap.min.css">
        <link rel="stylesheet" href="~/node_modules/@@fortawesome/fontawesome-free/css/all.min.css">
        <link rel="stylesheet" href="~/css/site.css">
    </environment>
    
    <environment include="Production">
        <link rel="stylesheet" href="~/lib/css/bootstrap.min.css" asp-append-version="true">
        <link rel="stylesheet" href="~/lib/css/font-awesome.min.css" asp-append-version="true">
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true">
    </environment>
</head>
<body>

    <div class="layout">
        @RenderBody()
    </div>

    <environment include="Development">
        <script src="~/node_modules/jquery/dist/jquery.min.js"></script>
        <script src="~/js/site.js"></script>
    </environment>

    <environment include="Production">
        <script src="~/lib/js/jquery.min.js" asp-append-version="true"></script>
        <script src="~/js/site.min.js" asp-append-version="true"></script>
    </environment>

    @RenderSection("Scripts", required: false)
</body>
</html>
