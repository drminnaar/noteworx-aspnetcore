@{
    ViewData["Title"] = "Home";
}

<div>
    <div class="light-overlay">
        <div class="home-content text-center">
            <span class="fa-stack fa-2x">
                <i class="fas fa-circle fa-stack-2x text-primary"></i>
                <i class="fas fa-book-open fa-stack-1x fa-inverse"></i>
            </span>
            <h1 class="my-3 text-primary">
                NOTEWORX
            </h1>
            <p class="lead">
                A simple note manager
            </p>
            <hr class="home-hr my-5" />
            <div class="form-group">
                <a asp-controller="Account" asp-action="Register" class="btn btn-lg btn-success w-50">Register</a>
            </div>
            <div class="form-group">
                <a asp-controller="Account" asp-action="Login" class="btn btn-lg btn-primary w-50">Login</a>
            </div>
        </div>
    </div>
</div>